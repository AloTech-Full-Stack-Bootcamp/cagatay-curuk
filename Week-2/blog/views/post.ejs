<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('<%= post.image %>')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">


        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %> 
            </h1>
            <h2 class="subheading">
            </h2>
            <span class="meta">Yazar :
              <a href="#">Çağatay ÇÜRÜK - </a>
              Oluşturulma Tarihi <%= moment(post.dateCreated).format('MMM DD YYYY') %>
            </span>
          </div>
        </div>
    

      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row mb-2 mt-2">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h2 class="text-center"><%= post.title %></h2> 
          <p><%= post.message %></p> 
        </div>
      </div>
    </div>
    <div class="row">
    <div class="col lg-12">
      <div class="text-center">
        <a href="/posts/edit/<%= post._id %> " class="btn btn-info">Update Details</a>										
        <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger btn-info"
          onclick="return confirm('Are you sure you want to delete this post?')" >Delete Post</a>	
      </div>	
    </div>
    </div>
  </article>

  <hr>
  
  <!-- Footer -->
  <%- include('partials/_footer') -%>
</body>

</html>